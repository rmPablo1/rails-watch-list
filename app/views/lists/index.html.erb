<div class="banner" >
    <div class="container">
      <h1>Save any kind of movies</h1>
    </div>
  </div>
<div class="container-xl col-12">
  <div class="container-fluid mt-5 ">
    <h1 class="d-flex justify-content-between">My lists:<%= link_to("Create a movie list", new_list_path, class: "btn btn-success align-self-center") %></h1>
  </div>
    <div id="card-container">
        <% @lists.each do |list| %>
          <%= link_to(list_path(list), class:"text-decoration-none") do %>
            <div id="card-movie">
              <p id="title"><%= list.name %></p>
            </div>
          <% end %>
      <% end %>
  </div>
</div>
