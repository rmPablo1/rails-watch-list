<div class="banner"  >
    <div class="container">
      <h1>Save any kind of movies</h1>
    </div>
  </div>
<div class="container-xl col-12">
  <div class="container-fluid mt-5 ">
    <h1 class="d-flex justify-content-between">My lists:<%= link_to("Create a movie list", new_list_path, class: "btn btn-success align-self-center") %></h1>
  </div>
    <div id="card-container">
        <% @lists.each do |list| %>
          <%= link_to(list_path(list), class:"text-decoration-none") do %>
            <% if list.background_image.attached? %>
            <div id="card-movie" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.background_image.key,
              width: 400, height: 300, crop: :fill) %>')">
              <p id="title"><%= list.name %></p>
            </div>
            <% else %>
              <div id="card-movie" style= "background-image: url();">
              <p id="title"><%= list.name %></p>
            </div>
            <% end %>

          <% end %>
      <% end %>
  </div>
</div>
